Script(`
set("dx", 0.0d)
set("dy", 0.0d)
set("count", 0)
`)

while(Custom(`count <= 20`))
  Script(`
  set("dx", 20 * rnd())
  set("dy", 20 * rnd()) 
  println(count + " : Moving mouse (" + dx + ", " + dy + ")")
  hid.MouseMove((int)dx, (int)dy).Wait()
  set("count", 1 + count)
  `)
  Delay(1000)
endwhile

